<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/main_linear_layout_bg_gris"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false" >

    <gpovallas.com.Header
        android:id="@+id/header"
        style="@style/header" />

    <RelativeLayout
        style="@style/basic_style"
        android:layout_width="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/tableBotones"
            style="@style/fill_width_wrap_height"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/bottom" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageButton
                    style="@style/menu_button_panel_control"
                    android:src="@drawable/menu_clientes"
                    android:padding="15dp"
                    android:scaleType="fitCenter"
                    android:onClick="openClientFinder" />

                <ImageButton
                    style="@style/menu_button_panel_control"
                    android:src="@drawable/btn_catalogo"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:onClick="openCatalogo" />

                <ImageButton
                    style="@style/menu_button_panel_control"
                    android:padding="5dp"
                    android:src="@drawable/btn_breaf"
                    android:scaleType="fitCenter"
                    android:onClick="openBrief" />
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:gravity="top|center"
                android:orientation="horizontal" >

                <ImageButton
                    style="@style/menu_button_panel_control"
                    android:src="@drawable/btn_circuito"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:onClick="openCircuito"/>
                
               <ImageButton
                    style="@style/menu_button_panel_control"
                    android:src="@drawable/btn_conoce"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:onClick="openConoce"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/login_buttons_wrapper_width"
                android:layout_height="wrap_content"
                android:gravity="top|center"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom"
            style="@style/fill_width_wrap_height"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp" 
            android:layout_alignParentBottom="true">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#FF999999" />

            <RelativeLayout
                style="@style/basic_style"
                android:orientation="horizontal"
                 >

                <TextView
                    android:id="@+id/lblLastUpdate"
                    style="@style/textBold"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_column="1"
                    android:layout_marginRight="20dp"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_lastUpdate"
                    style="@style/text"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/lblLastUpdate"
                    android:text="" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/boton_generico"
                    android:onClick="openSettings"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:src="@drawable/btn_settings_off" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>