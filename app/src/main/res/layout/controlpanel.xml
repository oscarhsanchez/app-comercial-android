<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/main_linear_layout_bg_gris"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:baselineAligned="false">

    <gpovallas.com.Header
        android:id="@+id/header"
        style="@style/header"/>

    <RelativeLayout
        style="@style/basic_style"
        android:layout_width="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/bottom">
            <LinearLayout
                android:id="@+id/tableBotones"
                style="@style/fill_width_wrap_height"
                android:layout_height="wrap_content"
                android:layout_above="@+id/bottom"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        style="@style/menu_button_panel_control"
                        android:onClick="openClientFinder"
                        android:padding="3dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/clientes2"/>

                    <ImageButton
                        style="@style/menu_button_panel_control"
                        android:onClick="openCatalogo"
                        android:padding="3dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/medios"/>

                    <ImageButton
                        style="@style/menu_button_panel_control"
                        android:onClick="openBrief"
                        android:padding="3dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/brief2"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:gravity="top|center"
                    android:orientation="horizontal">

                    <ImageButton
                        style="@style/menu_button_panel_control"
                        android:onClick="openCircuito"
                        android:padding="3dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/creatucircuito"/>

                    <ImageButton
                        style="@style/menu_button_panel_control"
                        android:onClick="openConoce"
                        android:padding="3dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/conocegpo"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/login_buttons_wrapper_width"
                    android:layout_height="wrap_content"
                    android:gravity="top|center"
                    android:orientation="horizontal">
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/bottom"
            style="@style/fill_width_wrap_height"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:padding="10dp">

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#FF999999"/>

            <RelativeLayout
                style="@style/basic_style"
                android:orientation="horizontal"
            >

                <TextView
                    android:id="@+id/lblLastUpdate"
                    style="@style/textBold"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_column="1"
                    android:layout_marginRight="20dp"
                    android:text=""/>

                <TextView
                    android:id="@+id/tv_lastUpdate"
                    style="@style/text"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/lblLastUpdate"
                    android:text=""/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/boton_generico"
                    android:onClick="openSettings"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:src="@drawable/btn_settings_off"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>