<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/main_linear_layout_bg_gris"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">
    <RelativeLayout
        style="@style/basic_layout_padding"
        android:layout_height="match_parent">
        <LinearLayout style="@style/container_filter"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_alignParentTop="true"
            android:id="@+id/linearLayout">

            <ImageView android:id="@+id/img_search_icon"
                android:layout_width="0dp"
                style="@style/wrap_style"
                android:adjustViewBounds="true"
                android:layout_weight="0.05"
                android:src="@android:drawable/ic_menu_search"/>

            <EditText android:id="@+id/ubi_search_filter"
                android:layout_width="0dp"
                style="@style/editText"
                android:layout_weight="0.75"
                android:hint="Filtrar por..."/>

            <Button android:id="@+id/ubi_search_all"
                android:layout_width="0dp"
                style="@style/wrap_style"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="Todos"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:onClick="deleteFilter"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

        <RelativeLayout
            style="@style/basic_layout_padding"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/linearLayout">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:id="@+id/map_container"
                android:layout_toLeftOf="@+id/table_ubicaciones">

                <fragment
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    class="com.google.android.gms.maps.SupportMapFragment"/>

            </RelativeLayout>
            <RelativeLayout
                style="@style/listViewRow"
                android:layout_width="270dp"
                android:layout_alignParentRight="true"
                android:id="@+id/table_ubicaciones">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_weight="0.20"
                        style="@style/listview_textview_th"
                        android:text="Plaza" />

                    <TextView
                        android:layout_weight="0.80"
                        style="@style/listview_textview_th"
                        android:text="UbcaciÃ³n" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="270dp"
                android:layout_below="@+id/table_ubicaciones"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content">

                <ListView android:id="@android:id/list"
                    android:textFilterEnabled="false"
                    android:cacheColorHint="#ECECEC"
                    style="@style/basic_style"
                    android:layout_width="270dp"
                    android:layout_gravity="right"
                    android:focusable="true"
                    android:layout_alignParentRight="true">

                </ListView>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>